script(type='text/html' id='config-model-values-value-view')
  tr
    td <%= name %>
    td <%= value %>
    td.
      <button class='btn btn-danger muted' data-config="<%= config %>" data-name="<%= name %>">delete</button>

script(type='text/html' id='config-model-values-view')
  table(class="table table-striped")
    col(style='width: 45%')
    col(style='width: 45%')
    col(style='width: 10%')
    thead
      tr
        th Key
        th Value
        th Delete
    tbody
      <%= values %>

script(type='text/html' id='config-model-view')
  h2(class="sub-header").
    <a href="/view/<%= config %>"><%= config %></a>
  <%= values %>
  form(class='form-inline' id='key-value-add')
    div(class='form-group')
      input(name='key' type='text' class='form-control' id='key' placeholder='Key')
      input(name='value' type='text' class='form-control' id='value' placeholder='Value')
    button(type='submit' class='btn btn-default' data-id='#{config}') Add

script(type='text/html' id='config-collection-model-view')
  div
    h2(class="sub-header").
      <a href="/view/<%= config %>"><%= config %></a>
    <%= values %>

script(type='text/html' id='state-model-view')
  form(class='form-horizontal pull-left')
    div(class='form-group')
      label(class='col-md-4 control-label') State
      div(class="col-sm-8")
        p(class="form-control-static") <%= state.state.name %>
    div(class='form-group')
      label(class='col-md-4 control-label') ID
      div(class="col-sm-8")
        p(class="form-control-static") <%= state.id %>
    div(class='form-group')
      label(class='col-md-4 control-label') Password
      div(class="col-sm-8")
        p(class="form-control-static") <%= state.pass %>
    div(class='form-group')
      label(class='col-md-4 control-label') Timeout
      div(class="col-sm-8")
        p(class="form-control-static") <%= state.timeout %>
