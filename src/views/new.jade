extend layout
block container
  div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
    form(method='post' action='/new' role='form' name='newConfig')
      div(class='form-group')
        label(for='confName') Config Name
        input(name='configName' type='text' class='form-control' id='confName' placeholder='Config Name')
      button(type='submit' class='btn btn-default') Create
