extend layout
block navbar
  form(class="navbar-form navbar-right" method="get" action='/logout')
    button(type='submit' class='btn btn-danger') Logout

block sidebar
  include sidebar

block container
  div(class='error')
    if error
      div(class='alert alert-danger')
        p
          strong #{error}
          |  - #{message}
  form(method='post' action='/configs/new' role='form' name='newConfig')
    div(class='form-group')
      label(for='confName') Config Name
      input(name='configName' type='text' class='form-control' id='confName' placeholder='Config Name')
    button(type='submit' class='btn btn-default') Create
